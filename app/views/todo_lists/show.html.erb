<div class="row">
  <div class="col s2"> </div>
  <div class="col s8 offset-s3">
		<div class="divider"></div>
		<div class="section">
			<p>
			  <h3><strong><%= @todo_list.title %></strong></h3>
			</p>
 
			<p>
			  <h5><em><%= @todo_list.description %></em></h5>
			</p>
	  </div>
		<div class="divider"></div>
		<div class="section">		
			<% @todo_list.todo_items.each do |todo_item| %>
		  <div class="todos">
				<%= link_to completed_todo_list_todo_item_path(@todo_list, todo_item), :method => :post  do %>
				   <% if todo_item.done == true %>
				     <%= check_box_tag(todo_item.id, todo_item.done, checked = true) %>
					   <%= label_tag(todo_item.id, todo_item.description) %>
					<% else %>
				     <%= check_box_tag(todo_item.id, todo_item.done, checked = false) %>
					   <%= label_tag(todo_item.id, todo_item.description) %>
					<% end %>					
					
				<% end %>
		   
				<div class="delete_cross">
				  <%= link_to 'X', todo_list_todo_item_path(@todo_list, todo_item),
				              method: :delete,
				              data: { confirm: 'Are you sure?' } %>
				</div>
				<div class="link_edit">
					<%= link_to 'edit', edit_todo_list_todo_item_path(@todo_list, todo_item), remote: true %>
				</div>
				
				<div class="form_edit">
					<%= form_for :todo_item, url: todo_list_todo_item_path(@todo_list, todo_item), method: :patch do |f| %>
					<div class="row">
					  <div class="input-field col s6">
							    <%= f.label :description %><br>
							    <%= f.text_field :description, class: "validate", id: todo_item.id %>
						</div>
					</div>
	  
		  
				    <%= f.submit "edit todo", class: "btn waves-light" %>

				<% end %>
			</div>
				
		  </div>
		  <% end %>
		</div>	
		<div class="divider"></div>
    <div class="section">

		  <h4>Add a todo item:</h4>
			<%= form_for([@todo_list, @todo_list.todo_items.build]) do |f| %>
			<div class="row">
			  <div class="input-field col s6">
					    <%= f.label :description %><br>
					    <%= f.text_field :description, class: "validate" %>
				</div>
			</div>
	  
		  
		    <%= f.submit "new todo", class: "btn waves-light" %>

		<% end %>
		</div>
		<%= link_to 'Todo lists', todo_lists_path %>
  </div>
  <div class="col s2"> </div>
</div>