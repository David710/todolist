<h4>to do lists:</h4>
<div class="row">
  <% @todo_lists.each_with_index  do |todo_list, index| %>
      <% if !index.even? %> <div class="row"> <% end %>
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= todo_list.title %></span>
              <p><%= todo_list.description%></p>
            </div>
            <div class="card-action">
              <%= link_to 'open', todo_list_path(todo_list) %>
							<%= link_to 'delete', todo_list_path(todo_list),
							              method: :delete,
							              data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      <% if !index.even? %> </div> <% end %>
		
  <% end %>
</div>
<%= link_to 'new todo list', new_todo_list_path %>